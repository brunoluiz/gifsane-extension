{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "GIFSane",
  "author": "Bruno Luiz Silva <contact@brunoluiz.net>",
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "all_frames": true,
      "js": ["src/vendor/ffmpeg.min.js", "src/vendor/ffmpeg-core.js", "src/content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/*",
        "src/img/*",
        "src/vendor/*"
      ],
      "matches": ["*://*/*"]
    }
  ],
  "background": {
    "service_worker": "src/worker.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "downloads",
    "contextMenus"
  ],
  "icons": {
    "48": "src/img/icon-48.png",
    "128": "src/img/icon-128.png"
  },
  "host_permissions": [
    "*://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; media-src * blob:; connect-src *; script-src  'self' 'unsafe-eval'"
  },
  "cross_origin_embedder_policy": {
    "value": "require-corp"
  },
  "cross_origin_opener_policy": {
    "value": "same-origin"
  }
}
