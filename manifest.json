{
  "manifest_version": 2,
  "version": "1.0.0",
  "name": "GIF to Video",
  "author": "Bruno Luiz Silva <contact@brunoluiz.net>",
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "all_frames": true,
      "js": ["src/vendor/ffmpeg.min.js", "src/vendor/ffmpeg-core.js", "src/js/content.js"]
    }
  ],
  "web_accessible_resources": [
    "src/img/*",
    "src/vendor/*"
  ],
  "action": {
    "default_icon": {
      "48": "src/img/icon-48.png",
      "128": "src/img/icon-128.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "icons": {
    "48": "src/img/icon-48.png",
    "128": "src/img/icon-128.png"
  },
  "content_security_policy": "script-src 'self' 'wasm-eval'; object-src 'self'"
}
