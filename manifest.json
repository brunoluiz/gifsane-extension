{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "GIF to Video",
  "author": "Bruno Luiz Silva <contact@brunoluiz.net>",
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "all_frames": true,
      "js": ["src/vendor/ffmpeg.min.js", "src/vendor/ffmpeg-core.js", "src/js/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/vendor/ffmpeg-core.js",
        "src/vendor/ffmpeg-core.wasm",
        "src/vendor/ffmpeg-core.worker.js",
        "src/vendor/ffmpeg-min.js.map"
      ],
      "matches": ["*://*/*"]
    }
  ],
  "action": {
    "default_icon": {
      "48": "src/img/icon-48.png",
      "128": "src/img/icon-128.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "icons": {
    "48": "src/img/icon-48.png",
    "128": "src/img/icon-128.png"
  },
  "content_security_policy": {
    "extension_pages": "default-src 'self'; media-src * blob:"
  },
  "cross_origin_embedder_policy": {
    "value": "require-corp"
  },
  "cross_origin_opener_policy": {
    "value": "same-origin"
  }
}
